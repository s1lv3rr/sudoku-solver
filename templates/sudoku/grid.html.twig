{% extends 'base.html.twig' %}

{% block title %}Hello SudokuController!{% endblock %}

{% block body %}

<form method="post" autocomplete="off">
    <div id="grid">
        {% for square in 1..9 %}
        <div class="square">
            {% if square < 4 %}
                {% for row in 1..3 %}
                    {% if square == 1 %}
                        {% for column in 1..3 %}
                            {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                            <div class="cell">
                                <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                            </div>                            
                        {% endfor %}
                    {% endif %}
                    {% if square == 2 %}
                        {% for column in 4..6 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                    {% if square == 3 %}
                        {% for column in 7..9 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            {% endif %}
            {% if square < 7 %}
                {% for row in 4..6 %}
                    {% if square == 4 %}
                        {% for column in 1..3 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                    {% if square == 5 %}
                        {% for column in 4..6 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                    {% if square == 6 %}
                        {% for column in 7..9 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            {% endif %}
            {% if square < 10 %}
                {% for row in 7..9 %}
                    {% if square == 7 %}
                        {% for column in 1..3 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                    {% if square == 8 %}
                        {% for column in 4..6 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                    {% if square == 9 %}
                        {% for column in 7..9 %}
                        {% set cellId =  square ~ '-' ~ row ~ '-' ~ column %}
                        <div class="cell">
                            <input type="text" name="{{cellId}}" size="1" maxlength="1" class="input">
                        </div>    
                        {% endfor %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
        {% endfor %}        
    </div>
    <button type="submit">RÃ©soudre</button>
</form>

{% endblock %}
